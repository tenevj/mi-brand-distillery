---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { getCollection } from 'astro:content';

const posts = (await getCollection('blog')).sort(
  (a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf()
);
---

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>MIBDistillery Blog</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="../css/bootstrap.min.css">
    <link rel="stylesheet" href="../css/styles.css">
    <link rel="icon" href="../favicon.ico" type="image/x-icon">
</head>
<body>
    <header style="display: flex; justify-content: space-between; align-items: center; height: 60px; top: 0;">
        <img src="../img/logo_bw_notxt_transparent.png" 
            style="margin-left: 4vw; width: auto; height: auto;" id="base64logo">
        
        <div class="navbar">
            <ul>
                <li class="nav-item">
                    <a class="nav-link" href="../index.html"><img src="../img/home.png" alt="Home" width="24" height="24"></a>
                <li>
                    <a href="#about">About</a>
                </li>
                <li>
                    <a href="#services">Services</a>
                </li>
                <li>
                    <a href="#team">Team</a>
                </li>
                <li>
                    <a href="../contact_us.html">Contact</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="./index.html"><img src="../img/blog-icon.png" alt="Blog" width="24" height="24"></a>
            </ul>
        </div>
    </header>

    <main class="container blog-container">
        <div class="blog-posts">
            {posts.map(post => (
                <article class="blog-post">
                    <div class="post-image-container">
                        {post.data.heroImage && <img src={post.data.heroImage} alt={post.data.title} class="featured-image img-fluid"/>}
                    </div>
                    
                    <div class="post-header">
                        <h2 class="post-title">{post.data.title}</h2>
                        <div class="post-meta">
                            <time datetime={post.data.pubDate}>
                                <i class="far fa-calendar-alt"></i> 
                                {post.data.pubDate.toLocaleDateString('en-us', {
                                    year: 'numeric',
                                    month: 'short',
                                    day: 'numeric',
                                })}
                            </time>
                            <span class="reading-time">
                                <i class="far fa-clock"></i> 5 min read
                            </span>
                        </div>
                    </div>

                    <div class="post-content">
                        <p>{post.data.description}</p>
                        
                        <div class="read-more-container">
                            <a href={`/blog/${post.slug}/`} class="btn btn-primary read-more">Read More</a>
                        </div>
                    </div>

                    <div class="share-buttons">
                        <span class="share-text">Share:</span>
                        <a href="#" class="share-button" aria-label="Share on Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a href="#" class="share-button" aria-label="Share on Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a href="#" class="share-button" aria-label="Share on LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                        <a href="#" class="share-button" aria-label="Share via Email">
                            <i class="far fa-envelope"></i>
                        </a>
                    </div>
                </article>
            ))}
        </div>

        <nav aria-label="Blog pagination" class="pagination-container">
            <ul class="pagination justify-content-center">
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Previous">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>
                <li class="page-item active"><a class="page-link" href="#">1</a></li>
                <li class="page-item"><a class="page-link" href="#">2</a></li>
                <li class="page-item"><a class="page-link" href="#">3</a></li>
                <li class="page-item">
                    <a class="page-link" href="#" aria-label="Next">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>
    </main>

    <footer>
        <div class="footer-container" id="footer">
            <div class="footer-logo">
                <img src="../img/logo-wb.png" alt="Company Logo">
            </div>

            <div class="footer-content">
                <div class="contact">
                    <p style="color: white">84 Alexander Stamboliyski Blvd.</p>
                    <p style="color: white">Sofia 1303, Bulgaria</p>
                    <p style="color: white"><img src="../img/mail-bw.png" alt="Email" 
                        style="width:24px; height:24px; vertical-align: middle;"
                        > solutions@mibdistillery.com</p>
                    <p style="color: white">
                        <img src="../img/phone-wb.png" alt="Phone" style="width:24px; height:24px;
                         vertical-align: middle;"
                        > +359 89 837 7855</p>
                </div>
                <div class="social-media">
                    <p style="color: white">
                        <a href="https://www.linkedin.com/company/mi-brand-distillery">
                            <img src="../img/li_icon.png" alt="LinkedIn" 
                            style="width:24px; height:24px;"
                            > LinkedIn</a></p>
                </div>
            </div>

            <div class="bottom-footer">
                <p>&copy; MI Brand Distillery, 2024</p>
            </div>
        </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
